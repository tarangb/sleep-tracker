{
  "compilerOptions": {
      "target": "es2017", // Set the target to ES2017 or later
      "lib": ["es2017", "dom"], // Include ES2017 and dom in the lib array        
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*", "test/**/*"]
}